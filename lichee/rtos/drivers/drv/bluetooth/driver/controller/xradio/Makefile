#common
include $(BT_DRV_BASE)/driver/controller/$(XRADIO_CONTROLLER_SELECT)/Makefile

#mode
ifeq ($(CONFIG_DRIVER_SUN20IW2_BT_CONTROLLER), y)
BT_CONTROLLER_MODE_SELECT := $(XRADIO_CONTROLLER_SELECT)/bt
else ifeq ($(CONFIG_DRIVER_SUN20IW2_BT_CONTROLLER_BLE_ONLY), y)
BT_CONTROLLER_MODE_SELECT := $(XRADIO_CONTROLLER_SELECT)/ble_only
else
BT_CONTROLLER_MODE_SELECT := bt
endif

include $(BT_DRV_BASE)/driver/controller/$(BT_CONTROLLER_MODE_SELECT)/Makefile
